##Java ready     
    - name: install open-jdk 8
      command: apt-get install openjdk-8-jre --assume-yes
      sudo: yes

##Jenkins download 
    - name: Download Jenkins
      get_url:
        url:  "{{download_url_jenkins}}"
        dest: "{{jenkins_name}}"
        mode: 0440
      sudo: yes
    
    - name: Change jenkins archive privileges
      command: "chmod 775 {{jenkins_name}}"
      sudo: yes

##Copy wildfly and jenkins deployment     
    - copy:
        src: /home/lpena/Documents/Tools/{{wildfly}}
        dest: "{{wildfly_name}}"
        mode: 0644
      sudo: yes
    
    - name: Change wildfly archive privileges
      command: "chmod 775 {{wildfly_name}}"
      sudo: yes         
    
    - name: extract wildfly
      command: tar zxvf {{wildfly_name}}
      sudo: yes
    
    - name: copy wildfly to opt
      shell: "cp -R /home/ubuntu/wildfly-11.0.0.Final {{wildfly_folder}}"
      sudo: yes
    
    - name: copy jenkins to deployments
      command: cp {{jenkins_name}} {{wildfly_deployments}}
      sudo: yes
    
    - name: start wildfly and deploy jenkins
      shell: "{{wildfly_folder}}/bin/standalone.sh &"
      sudo: yes
  
##Copy tomcat      
    - copy:
        src: /home/lpena/Documents/Tools/{{tomcat}}
        dest: "{{tomcat_name}}"
        mode: 0644
      sudo: yes
    
    - name: Change tomcat archive privileges
      command: "chmod 775 {{tomcat_name}}"
      sudo: yes         
    
    - name: extract tomcat
      command: tar zxvf {{tomcat_name}}
      sudo: yes
    
    - name: copy tomcat to opt
      shell: "cp -R /home/ubuntu/apache-tomcat-8.5.23 {{tomcat_folder}}"
      sudo: yes
    
    - copy:
        src: "{{tomcat_conf}}"
        dest: "{{tomcat_folder}}/conf"
        mode: 0644
      sudo: yes
    
    - name: copy jenkins to tomcat deployments
      command: cp {{jenkins_name}} {{tomcat_deployments}}
      sudo: yes
    
    - name: start tomcat
      shell: "nohup {{tomcat_folder}}/bin/catalina.sh start"
      sudo: yes 

##Jenkins service 
    - copy:
        src: "{{jenkins_service}}"
        dest: /etc/systemd/system/jenkins.service
        mode: 0644
      sudo: yes
    
    - name: start jenkins service
      shell: systemctl start jenkins.service
      sudo: yes 

##Maven ready
    - name: install maven
      command: sudo apt-get install maven --assume-yes
      sudo: yes
    
    - name: verify maven was installed
      command: mvn -version      

##Apache2 ready   
    - name: install apache2
      apt: name=apache2 update_cache=yes state=latest
      sudo: yes 
    
    - name: ensure apache is running (and enable it at boot)
      service: name=apache2 state=started enabled=yes

